<div style="padding: 10%">
<p id="notice"><%= notice %></p>

<table id="example" class="table table-striped table-bordered hover" cellspacing="2" width="100%">
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Image</th>
    <th>Details </th>
    <th>Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @projects.each do |project| %>
    <tr>
      <td><%= project.name %></td>
      <td><%= project.description %></td>
      <td><img src ="<%= project.image %>"></td>
      <td><a href ="<%= project.link %>">View Details/Code</a></td>
      <td><%= link_to 'Show', project %> | <%= link_to 'Edit', edit_project_path(project) %> | <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<br/>
</div>